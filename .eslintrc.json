{
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [{
        "files": ["*.ts", "*/*.ts", "*/*/*.ts", "*/*/*/*.ts"],
        "rules": {
            "keyword-spacing": ["error", {
                "overrides":{
                    "for": {
                        "before": false,
                        "after": false
                    },
                    "while": {
                        "before": false,
                        "after": false
                    },
                    "catch": {
                        "before": true,
                        "after": false
                    },
                    "from": {
                        "before": true,
                        "after": true
                    },
                    "if": {
                        "before": false,
                        "after": false
                    }
                }
            }]
        }
    }]
}